---
import "../styles/global.css";
import "aos/dist/aos.css";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link
      href="https://fonts.googleapis.com/css2?family=Strait&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Kaisei+HarunoUmi:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Aboreto&family=Sanchez:ital@0;1&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Rye&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Krub:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />

    <!-- InicializaciÃ³n de AOS y scroll del logo -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        import("aos").then((AOS) => AOS.init());

        const svg = document.getElementById("logo-svg");
        if (!svg) return;

        window.addEventListener("scroll", () => {
          if (window.innerWidth < 768) {
            if (window.scrollY > 100) {
              svg.classList.remove(
                "top-[9rem]",
                "left-[83%]",
                "-translate-x-1/2",
                "w-20",
              );
              svg.classList.add("top-4", "left-4", "w-12");
            } else {
              svg.classList.add(
                "top-[9rem]",
                "left-[83%]",
                "-translate-x-1/2",
                "w-20",
              );
              svg.classList.remove("top-4", "left-4", "w-12");
            }
          }
        });
      });
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ATB</title>
  </head>
  <body class="snap-y snap-mandatory scroll-smooth">
    <!-- SVG logo -->
    <svg
      id="logo-svg"
      class="fixed z-50 mix-blend-difference pointer-events-none opacity-100 transition-all duration-700 ease-in-out
     top-[9rem] left-[83%] -translate-x-1/2 w-20 h-auto
     md:top-4 md:left-10 md:w-12"
      viewBox="0 0 112 54"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M67.9053 9.27039C70.4649 9.27058 72.5398 11.3455 72.54 13.9052V44.7294H41.7158C39.1562 44.7292 37.0812 42.6542 37.0811 40.0946V9.27039H67.9053ZM49.4414 18.5409V19.5594H54.873V34.7225H56.0615V19.5594H61.6064V18.5409H49.4414Z"
